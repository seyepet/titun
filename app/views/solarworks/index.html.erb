 <div class="card-group">
    <div class="container">
     <div class="card-deck">
        <div class="album text-muted">
          
              <div class="row">
                 <% @solarworks.each do |solarwork| %>
                 <div class="col-sm-3 col-md-3">
                 <div class="card card mb-3 style="max-width: 8rem;", class: "mx-auto d-block">
                    <a href="<%= solarwork_path(solarwork) %>"><%= image_tag  solarwork.image_url,class: "mx-auto d-block", class: "img-responsive img-thumbnail", class: "h-75 d-inline-block", class: "w-75 p-3" %></a>
                   <div class="row">
                     <div class="col">
                     <h6><p class=" price card-header text-center"><%= solarwork.name %></p></h6>
                     <h6><p class=" price card-header text-center"><%= solarwork.code %></p</h6>
                     <h6><p class=" price card-header text-center"><%= solarwork.price %></p></h6>
                   
                  <h6> <p class="h6"><%= link_to 'Details', solarwork, :class=>"btn btn-primary btn-block" %></p</h6>
                  </div>
                 </div>
               </div>
             </div>
            <% end %>
          </div>
       </div>
     </div>
    </div>
   </div>
  </div>
