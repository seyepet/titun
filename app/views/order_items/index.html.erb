<div class="container">
	<table id="cart" class="table table-hover table-condensed">
    				<thead>
						<tr>
							<th style="width:50%">Product</th>
							<th style="width:10%">Price</th>
							<th style="width:8%">Quantity</th>
							<th style="width:22%" class="text-center">Delete</th>
							<th style="width:10%">Checkout</th>
						</tr>
					</thead>
					<tbody>
				 <% @items.each do |item| %>
						<tr>
							<td data-th="Product">
								<div class="row">
								<div class="col-sm-2 hidden-xs"></div>
									<div class="col-sm-10">
									 
									  
										<h4 class="nomargin"><%= item.product.title %></h4>
										<!--<p>Quis aute iure reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Lorem ipsum dolor sit amet.</p>-->
									</div>
								</div>
							</td>
							<td data-th="Price">â‚¦<%= item.price %></td>
							<td data-th="Quantity">
								<%= item.quantity %>
							</td>
							<% invisible_captcha%>
							
							<td class="actions" data-th="">
								<button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
								<button class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></button>								
							</td>
						</tr>
					</tbody>
					<tfoot>
						<!--<tr class="visible-xs">-->
						<!--	<td class="text-center"><strong>Total 1.99</strong></td>-->
						<!--</tr>-->
						<tr>
							<td><a href="#" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
							<td colspan="2" class="hidden-xs"></td>
							 
							<td class="text-center"><strong><%= form_for item, method: :delete do |f| %>
            <%= f.submit "Remove" %>
          <% end %></strong></td>
							<td>	<%= link_to 'Checkout', checkout_path,class:'btn btn-success btn-block', class: 'fa fa-angle-right' %></td>
						</tr>
						<% end %>
					</tfoot>
				
				</table>
				
</div>






