 <div class="card-group">
    <div class="container">
     <div class="card-deck">
        <div class="album text-muted">
          
              <div class="row">
                 <% @tonycycles.each do |tonycycle| %>
                 <div class="card card mb-3 style="max-width: 8rem;", class: "mx-auto d-block">
                    <a href="<%= tonycycle_path(tonycycle) %>"><%= image_tag  tonycycle.image_url,class: "mx-auto d-block", class: "img-responsive img-thumbnail", class: "h-75 d-inline-block", class: "w-75 p-3" %></a>
                   <div class="row">
                     <div class="col">
                     <h6><p class=" price card-header text-center"><%= tonycycle.brand %></p></h6>
                     <h6><p class=" price card-header text-center"><%= tonycycle.price %></p></h6>
                   
                   <h6> <p class="h6"><%= link_to 'Details', tonycycle, :class=>"btn btn-primary btn-block" %></p></h6>
                 </div>
               </div>
             </div>
            <% end %>
          </div>
       </div>
     </div>
    </div>
   </div>
  </div>
