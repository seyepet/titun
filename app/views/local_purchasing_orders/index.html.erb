<div class="container">
  <div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="panel panel-default">
			<div class="panel-heading">
			  <h3 class="panel-title">Your Purchasing Orders</h3>
		    </div>


                <p id="notice"><%= notice %></p>
                
                <h1>Local Purchasing Orders</h1>
                
                <table class="table table-hover table-bordered">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Contragent</th>
                      <th>Amount</th>
                      <th>Currency</th>
                      <th>Date</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                
                  <tbody>
                    <% @local_purchasing_orders.each do |local_purchasing_order| %>
                      <tr>
                        <td><%= local_purchasing_order.name %></td>
                        <td><%= local_purchasing_order.contragent %></td>
                        <td><%= local_purchasing_order.amount %></td>
                        <td><%= local_purchasing_order.currency %></td>
                        <td><%= local_purchasing_order.date %></td>
                        <td><%= link_to 'Show', local_purchasing_order %></td>
                        <td><%= link_to 'Edit', edit_local_purchasing_order_path(local_purchasing_order) %></td>
                        <td><%= link_to 'Destroy', local_purchasing_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                
                <br>
                
                <%= link_to 'New Local Purchasing Order', new_local_purchasing_order_path, class: 'btn btn-primary' %>
            </div> 

               </div>
            </div>
          </div>
        </div> 