<div class='container'>
  <div class='row'>
    <div class='col-sm-4'>
      
    </div>
    <div class='col-sm-4'>
      <h3>Seller and Product Information</h3>
        <%= form_with(model: post, local: true) do |form| %>
          <% if post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        
              <ul>
              <% post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
          <div class="form-group">
            <%= form.text_field :title,  autofocus: true, autocomplete: "Title", placeholder: 'Title', class: "form-control" %>
          </div>
          
           <div class="form-group">
            <%= form.text_field :first_name,  autofocus: true, autocomplete: "First Name", placeholder: 'First Name', class: "form-control" %>
          </div>
          
           <div class="form-group">
            <%= form.text_field :title,  autofocus: true, autocomplete: "Last Name", placeholder: 'Last Name', class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= form.text_field :Phone_Number,  autofocus: true, autocomplete: "Valid Phone Number", placeholder: 'Valid Phone Number', class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= form.text_field :Email,  autofocus: true, autocomplete: "Email", placeholder: 'Email', class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= form.text_field :Product_Information,  autofocus: true, autocomplete: "Product Dscription", placeholder: 'Product Description', class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= form.text_field :Product_Price,  autofocus: true, autocomplete: "Product Price", placeholder: 'Product Price', class: "form-control" %>
          </div>
          
           <div class="form-group">
            <%= form.text_field :Street_Address,  autofocus: true, autocomplete: "Business Address", placeholder: 'Business Address', class: "form-control" %>
          </div>
          
           <div class="form-group">
            <%= form.text_field :street_address2,  autofocus: true, autocomplete: "Street Address", placeholder: 'Street Address', class: "form-control" %>
          </div>
          
           <div class="field">
            <%= form.label :image %>
            <%= form.file_field :image %>
          </div>
          
          <div class="form-group honeypot">
              <%= label_tag :content %>
              <%= text_field_tag :content, nil, tabindex: '-1' %>
              <span class="help">Do not fill in this field. It is an anti-spam measure.</span>
            </div>
        
         <div class="g-recaptcha" data-sitekey="6LcL66IUAAAAAA_kQHU1997bGbxO1TkNATWk5jqj"></div>
        
          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>

    </div>
    <div class='col-sm-4'>
      
    </div>
    
  </div>
</div>


