<p id="notice"><%= notice %></p>

<h1>Dreamscomputers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Number</th>
      <th>Vendor</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dreamscomputers.each do |dreamscomputer| %>
      <tr>
        <td><%= dreamscomputer.name %></td>
        <td><%= dreamscomputer.model %></td>
        <td><%= dreamscomputer.price %></td>
        <td><%= dreamscomputer.description %></td>
        <td><%= dreamscomputer.image_url %></td>
        <td><%= dreamscomputer.number %></td>
        <td><%= dreamscomputer.vendor %></td>
        <td><%= dreamscomputer.category %></td>
        <td><%= link_to 'Show', dreamscomputer %></td>
        <td><%= link_to 'Edit', edit_dreamscomputer_path(dreamscomputer) %></td>
        <td><%= link_to 'Destroy', dreamscomputer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

